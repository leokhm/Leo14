<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout">


    <NumberPicker
        android:layout_width="72dp"
        android:layout_height="108dp"
        android:id="@+id/numberPicker_name"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="64dp" />

    <NumberPicker
        android:layout_width="28dp"
        android:layout_height="108dp"
        android:id="@+id/numberPicker_roundType"
        app:layout_constraintLeft_toRightOf="@+id/numberPicker_name"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="64dp" />

    <NumberPicker
        android:layout_width="28dp"
        android:layout_height="108dp"
        android:id="@+id/numberPicker_score"
        app:layout_constraintLeft_toRightOf="@+id/numberPicker_name2"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="64dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_RoundSubmit"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/numberPicker_name2"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_RoundCancel"
        app:layout_constraintTop_toBottomOf="@+id/button_RoundSubmit"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/button_RoundSubmit"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <NumberPicker
        android:layout_width="70dp"
        android:layout_height="108dp"
        android:id="@+id/numberPicker_name2"
        app:layout_constraintLeft_toRightOf="@+id/numberPicker_roundType"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="64dp" />

    <TextView
        android:text="Fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ScoreUnit"
        app:layout_constraintLeft_toRightOf="@+id/numberPicker_score"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/numberPicker_score"
        app:layout_constraintBottom_toBottomOf="@+id/numberPicker_score" />
</android.support.constraint.ConstraintLayout>