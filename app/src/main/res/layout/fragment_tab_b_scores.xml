<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_score"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="0dp"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="3dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/moneySign"
                    />

                    <TextView
                        android:id="@+id/p1rScore"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="p1score"
                        android:textAlignment="viewEnd" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/card_view5"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moneySign"
                        />

                    <TextView
                        android:id="@+id/p2rScore"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="p2score"
                        android:textAlignment="viewEnd" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/card_view4"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/moneySign"
                    />

                    <TextView
                        android:id="@+id/p3rScore"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="p3score"
                        android:textAlignment="viewEnd" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/card_view3"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/moneySign"
                    />

                    <TextView
                        android:id="@+id/p4rScore"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="p4score"
                        android:textAlignment="viewEnd" />



            </android.support.v7.widget.CardView>
        </android.support.v7.widget.LinearLayoutCompat>

    </RelativeLayout>

</android.support.v7.widget.CardView>