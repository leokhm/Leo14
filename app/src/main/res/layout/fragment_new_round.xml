<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">


        <com.greativy.leo14.CustomNumberPicker
            android:id="@+id/numberPicker_name"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="4"
            />

        <com.greativy.leo14.CustomNumberPicker
            android:id="@+id/numberPicker_roundType"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_toEndOf="@+id/numberPicker_name"
            android:layout_weight="1"
            />

        <com.greativy.leo14.CustomNumberPicker
            android:id="@+id/numberPicker_name2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="4"
            />

        <com.greativy.leo14.CustomNumberPicker
            android:id="@+id/numberPicker_score"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
             />

    </LinearLayout>

    <Button
        android:id="@+id/button_RoundSubmit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:text="@string/btn_submit"
        android:theme="@style/MyButton" />

    <Button
        android:id="@+id/button_RoundCancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_toStartOf="@+id/button_RoundSubmit"
        android:text="@string/btn_cancel"
        android:theme="@style/MyCancelButton" />
</RelativeLayout>