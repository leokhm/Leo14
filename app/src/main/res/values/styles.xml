<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/mid_grey_text</item>
        <item name="android:textColorPrimary">@color/dark_grey_text</item>
    </style>

    <style name="AppTheme.NoActionBarSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:textColorPrimary">@color/dark_grey_text</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColorPrimary">@color/dark_grey_text</item>


    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>


    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>


    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="colorButtonNormal">@color/background_material_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyCancelButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="colorButtonNormal">@color/background_material_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
